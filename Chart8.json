{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  

   "title": {
    "text": "Tech Bubble",
    "subtitle":"NASDAQ Composite",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },
  
  "data": {
    "url": "https://raw.githubusercontent.com/Gozdziewicz23/Gozdziewicz23.github.io/main/nasdaq-historical-chart.csv"},
  "height": 400,
  "width": "container",
  "mark": {
    "type": "line",
    "smooth": true
    "point": false,
    "interpolate": "step",
    "color": "red"
  },

  "encoding": {"x": {"field": "date", "type": "temporal", "title":null}},
 
  "layer": [
    {"encoding": {
        "y": {"field": "value", 
              "type": "quantitative", 
              "title":null}},
        
        "layer": [
          {"mark":{
            "type": "line",
            "align": false,
            "interpolate": "step",
            "color": "red"}},
          {"transform": 
            [{"filter": {"selection": "hover"}}], 
               "mark": {
                 "type":"circle",
                 "size":150,
                 "color":"red"}}
      ]
    },
    
    {"mark": "rule", 
      "encoding": {
         "opacity": {
           "condition": {"value": 0, "selection": "hover"},
           "value": 0
             },
          "tooltip": [
          {"field": "date", "type": "temporal", "format": "%b-%Y", "title":"date"},  
          {"field": "value", "type": "quantitative", "format": ",.0f", "title":"NASDAQ Value"}
            ]
           },
      "selection": {
        "hover": {
          "type": "single",
          "fields": ["date"],
          "nearest": true,
          "on": "mouseover",
          "empty": "none",
          "clear": "mouseout"
        }
      }
    }
  ]
}
