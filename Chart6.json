{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Changes in Fertility Rates",
  "title": {
  
    "subtitle": "Changes in Fertility Rates",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black",
    "limit": {
      "expr": "screen().width"
    }
  },
  "data": {
    "url": "https://api.worldbank.org/v2/country/de;pl;fr;irl;es;ita;dk;swe/indicator/SP.DYN.TFRT.IN?&per_page=1000&format=json",
    "format": {
      "type": "json",
      "property": "1"
    }
  },
  "height": 400,
  "width": "container",
  "mark": {
    "type": "line",
    "point": true,
    "interpolate": "monotone",
    "color": "blueviolet",
    "tooltip": true
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": "Year"
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "Fertility rate"
    },
    "color": {
      "field": "country.value",
      "type": "nominal",
      "legend": null
    }
  }
}
