{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Real problem for many countries",
  "title": {
    "text": "Real problem for many countries",
    "subtitle": "Quick description - removable",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "../data/realProblem.csv",
    "format": {
      "type": "csv"
    }
  },
  "height": 400,
  "width": 500,
  "transform": [
    {
      "filter": "datum['Policy on fertility level'] == 'Raise'"
    },
    {
      "calculate": "datum.Region === 'Africa' ? 'Africa' : datum.Region === 'Asia' ? 'Asia' : datum.Region === 'Europe' ? 'Europe' : datum.Region === 'Latin Amer. & Caribbean' ? 'Latin Amer. & Caribbean' : datum.Region === 'Northern America' ? 'Northern America' : 'Oceania'",
      "as": "Region"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Country name",
          "as": "country_count"
        }
      ],
      "groupby": [
        "Region"
      ]
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "nominal",
      "title": "Year"
    },
    "color": {
      "field": "Region"
    }
  }
}
