{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Cash Benefits solution",
  "title": {
    "text": "Cash Benefits solution",
    "subtitle": "Quick description - removable",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black",
    "limit": {
      "expr": "screen().width"
    }
  },
  "data": {
    "url": "https://api.worldbank.org/v2/country/pl/indicator/SP.DYN.TFRT.IN?date=2000:2050&per_page=150&format=json",
    "format": {
      "type": "json",
      "property": "1"
    }
  },
  "height": 400,
  "width": "container",
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": true,
        "interpolate": "monotone",
        "color": "greenyellow",
        "tooltip": true
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "title": "Year"
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "title": "Fertility rate"
        },
        "color": {
          "field": "country.value",
          "type": "nominal",
          "legend": null
        }
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "red",
        "size": 3
      },
      "encoding": {
        "x": {
          "datum": {
            "year": 2018
          }
        }
      }
    }
  ]
}
