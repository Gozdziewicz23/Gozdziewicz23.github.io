{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Changes in Fertility Rates - World",
  "title": {
    "text": "Changes in Fertility Rates - World",
    "subtitle": "Quick description - removable",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/deldersveld/topojson/master/world-countries.json",
    "format": {
      "type": "topojson",
      "feature": "countries1"
    }
  },
  "height": 400,
  "width": "container",
  "autosize": {
    "type": "fit"
  },
  "mark": "geoshape",
  "projection": {
    "type": "naturalEarth1"
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "../data/fertilityWorldRates2.csv",
          "format": {
            "type": "csv"
          }
        },
        "key": "Country Name",
        "fields": [
          "Time",
          "Value"
        ]
      }
    },
    {
      "filter": "datum.Time == selectedYear"
    }
  ],
  "params": [
    {
      "name": "selectedYear",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 1960,
        "max": 2021,
        "step": 1,
        "name": "Year:"
      }
    }
  ],
  "encoding": {
    "color": {
      "field": "Value",
      "type": "quantitative",
      "legend": {
        "title": "Fertility rate",
        "orient": "bottom",
        "direction": "horizontal"
      },
      "scale": {
        "scheme": "yelloworangebrown"
      }
    },
    "tooltip": [
      {
        "field": "properties.name",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "Value",
        "type": "quantitative",
        "title": "Fertility rate"
      }
    ]
  }
}
