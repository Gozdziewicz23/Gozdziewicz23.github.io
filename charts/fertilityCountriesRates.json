{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Changes in Fertility Rates",
  "title": {
    "text": "Changes in Fertility Rates",
    "subtitle": "Quick description - removable",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "../data/fertilityCountriesRates.csv",
    "format": {
      "type": "csv"
    }
  },
  "height": 400,
  "width": "container",
  "mark": {
    "type": "line",
    "point": true,
    "interpolate": "monotone",
    "color": "blueviolet",
    "tooltip": true
  },
  "encoding": {
    "x": {
      "field": "Time",
      "type": "temporal",
      "title": "Year"
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "title": "Fertility rate"
    },
    "color": {
      "field": "Country Name",
      "type": "nominal",
      "legend": null
    }
  }
}
